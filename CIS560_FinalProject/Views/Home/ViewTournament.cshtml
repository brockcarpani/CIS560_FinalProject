@model CIS560_FinalProject.Models.Tournament
@{
    ViewBag.Title = "ViewTournament";
}

<div class="row">
    <h5>Viewing the @Model.Name Tournament</h5>
</div>
@Html.ActionLink("Create new Matchup", "CreateMatchup", "Match", null, new { @class = "btn btn-primary" })
<hr />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Round</th>
            <th scope="col">Score</th>
            <th scope="col">Location</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model.Matches)
    {
        <tr>
            <td>@item.Round</td>
            <td>@item.Team1Score - @item.Team2Score</td>
            <td>@item.Location.Venue, @item.Location.StateProvince</td>
            <td>
                \
                @Html.ActionLink("View", "ViewMatch", "MatchControlller", new { id = item.MatchID }, null) |
                @Html.ActionLink("Edit", "EditMatch", "MatchControlller", new { id = item.MatchID }, null) |
                @Html.ActionLink("Delete", "DeleteMatch", "MatchControlller", new { id = item.MatchID }, null)
            </td>
        </tr>
    }
    <tbody></tbody>
</table>
