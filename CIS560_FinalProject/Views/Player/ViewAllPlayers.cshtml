@model IEnumerable<CIS560_FinalProject.Models.Player>
@{
    ViewBag.Title = "ViewAllPlayers";
}

<div class="row">
    <h5>Viewing all players in the database</h5>
</div>

<hr />
<div id="top-menu-container" class="row">
    @Html.ActionLink("Add new Player", "CreatePlayer", "Player", null, new { @class = "btn btn-primary" })
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Number</th>
            <th scope="col">Team</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName @item.LastName</td>
            <td>@item.Number</td>
            <td>@item.Team</td>
            <td>
                @Html.ActionLink("View", "ViewPlayer", "Player", new { id = item.PlayerID }, null) |
                @Html.ActionLink("Edit", "EditPlayer", "PlayerController", new { id = item.PlayerID }, null) |
                @Html.ActionLink("Delete", "DeletePlayer", "PlayerController", new { id = item.PlayerID }, null)
            </td>
        </tr>
    }
    <tbody></tbody>
</table>